<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".food">


    <TextView
        android:id="@+id/recipeDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeNameTextView"
        android:layout_gravity="center"
        android:text="Food List"
        android:layout_marginBottom="16dp"
        android:textColor="#E91E63"
        android:textSize="40sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/recipeImageView1"
        android:layout_width="152dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/material_emphasis_medium"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_1" />

    <TextView
        android:id="@+id/recipeNameTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Rohu Fish Curry"
        android:layout_marginBottom="20dp"
        android:textColor="#5C0B6A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/recipeImageView2"
        android:layout_width="152dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/material_emphasis_medium"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_3" />
    <TextView
        android:id="@+id/recipeNameTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Easy Vegetarian Mexican Rice"
        android:layout_marginBottom="20dp"
        android:textColor="#5C0B6A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/recipeImageView3"
        android:layout_width="152dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/material_emphasis_medium"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_4" />
    <TextView
        android:id="@+id/recipeNameTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Marry Me Chicken"
        android:layout_marginBottom="20dp"
        android:textColor="#5C0B6A"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/recipeImageView4"
        android:layout_width="152dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/material_emphasis_medium"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_5" />
    <TextView
        android:id="@+id/recipeNameTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Easy Fried Rice"
        android:layout_marginBottom="20dp"
        android:textColor="#5C0B6A"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>