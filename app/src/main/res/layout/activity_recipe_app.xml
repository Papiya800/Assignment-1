<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".RecipeApp">


    <ImageView
        android:id="@+id/recipeImageView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:src="@drawable/img_2"
        android:scaleType="centerCrop"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/recipeNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeImageView"
        android:layout_centerHorizontal="true"
        android:text="RecipeApp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#5C0B6A"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/recipeDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeNameTextView"
        android:layout_centerHorizontal="true"
        android:text="Welcome to our Recipe app"
        android:textColor="#E91E63"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/FoodButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeDescriptionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#44A1AB"
        android:text="FOOD"
        android:textStyle="bold" />


    <Button
        android:id="@+id/DrinksButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipeDescriptionTextView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="80dp"
        android:padding="10dp"
        android:background="#4D944F"
        android:text="Drinks"
        android:textStyle="bold" />


</RelativeLayout>


